{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [{
      "type": "Container"
    },
    {
      "type": "TextBlock",
      "text": "${$root.strings.DistributionCenterLabel} #${$root.centerNumber} ",
      "wrap": true,
      "weight": "Bolder",
      "size": "Large",
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "${strings.AsOfLabel} {{TIME(${currentTime})}}  â€¢  ${app.distributionCenterLocation}",
      "wrap": true,
      "size": "Small",
      "isSubtle": true
    },
    {
      "type": "ColumnSet",
      "columns": [{
          "type": "Column",
          "width": 48,
          "items": [{
              "type": "TextBlock",
              "text": "${strings.AvailableHeader}",
              "wrap": true,
              "size": "Small",
              "weight": "Bolder",
              "isSubtle": true
            },
            {
              "type": "TextBlock",
              "text": "${app.amountAvailable}M ",
              "wrap": true,
              "size": "Large",
              "weight": "Bolder"
            },
            {
              "type": "ColumnSet",
              "columns": [{
                  "type": "Column",
                  "width": "28px",
                  "items": [{
                    "type": "TextBlock",
                    "text": "${if(app.amountAvailableChange > 0, strings.UpArrow, strings.DownArrow)}",
                    "wrap": true,
                    "color": "${if(app.amountAvailableChange > 0, 'good', 'attention')}"
                  }]
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "verticalContentAlignment": "Center",
                  "items": [{
                    "type": "TextBlock",
                    "text": " ${if(app.amountAvailableChange > 0, \"+\", \"-\")}${app.amountAvailableChange}% ",
                    "wrap": true
                  }]
                }
              ],
              "style": "${if(app.amountAvailableChange > 0, 'good', 'attention')}",
              "spacing": "Medium"
            }
          ],
          "style": "emphasis"
        },
        {
          "type": "Column",
          "width": 4
        },
        {
          "type": "Column",
          "items": [{
              "type": "TextBlock",
              "text": "${strings.ReadyToShipHeader}",
              "wrap": true,
              "size": "Small",
              "weight": "Bolder",
              "isSubtle": true
            },
            {
              "type": "TextBlock",
              "text": "${app.readyToShipAvailable}M",
              "wrap": true,
              "size": "Large",
              "weight": "Bolder"
            },
            {
              "type": "ColumnSet",
              "style": "${if(app.readyToShipChange > 0, 'good', 'attention')}",
              "columns": [{
                  "type": "Column",
                  "width": "28px",
                  "items": [{
                    "type": "TextBlock",
                    "text": "${if(app.readyToShipChange > 0, strings.UpArrow, strings.DownArrow)}",
                    "wrap": true,
                    "color": "${if(app.readyToShipChange > 0, 'good', 'attention')}"
                  }]
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [{
                    "type": "TextBlock",
                    "text": " ${if(app.readyToShipChange > 0, \"+\", \"-\")}${app.readyToShipChange}% ",
                    "wrap": true
                  }],
                  "verticalContentAlignment": "Center"
                }
              ],
              "spacing": "Medium"
            }
          ],
          "width": 48,
          "style": "emphasis"
        }
      ],
      "spacing": "Large"
    },
    {
      "type": "TextBlock",
      "text": "${strings.TopSellerHeader}",
      "wrap": true,
      "spacing": "ExtraLarge",
      "size": "Medium",
      "weight": "Bolder"
    },
    {
      "type": "Container"
    },
    {
      "type": "ColumnSet",
      "$data": "${app.inventoryItems}",
      "columns": [{
          "type": "Column",
          "width": "50px",
          "items": [{
            "type": "Image",
            "url": "${imageUrl}",
            "width": "48px",
            "height": "48px",
            "horizontalAlignment": "Center"
          }],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": 75,
          "items": [{
              "type": "TextBlock",
              "text": "${name}",
              "wrap": true,
              "weight": "Bolder"
            },
            {
              "type": "ColumnSet",
              "columns": [{
                  "type": "Column",
                  "width": 33,
                  "items": [{
                    "type": "TextBlock",
                    "text": "${amount}",
                    "wrap": true
                  }]
                },
                {
                  "type": "Column",
                  "width": 33,
                  "items": [{
                    "type": "TextBlock",
                    "text": "${change}",
                    "wrap": true,
                    "color": "Good"
                  }]
                },
                {
                  "type": "Column",
                  "width": 33
                }
              ],
              "spacing": "Small"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": 5,
          "items": [{
            "type": "Image",
            "url": "data:image/png;base64,",
            "width": "20px",
            "height": "20px",
            "selectAction": {
              "type": "Action.OpenUrl",
              "$when": "${linkUrl != ''}",
              "url": "${linkUrl}",
              "style": "default"
            }
          }],
          "verticalContentAlignment": "Center",
          "horizontalAlignment": "Right"
        }
      ],
      "spacing": "Medium",
      "selectAction": {
        "type": "Action.OpenUrl",
        "$when": "${linkUrl != ''}",
        "url": "${linkUrl}",
        "style": "default"
      },
      "separator": true
    },
    {
      "type": "TextBlock",
      "text": "${strings.FooterText}",
      "wrap": true,
      "spacing": "Large"
    }
  ]
}